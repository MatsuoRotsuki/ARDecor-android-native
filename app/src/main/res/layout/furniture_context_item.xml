<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/g_card_background"
    app:cardUseCompatPadding="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageFurnitureContextRvItem"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvProductNameFurnitureContext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="LACK Coffee table, dark brown"
            app:layout_constraintStart_toEndOf="@id/imageFurnitureContextRvItem"
            app:layout_constraintTop_toTopOf="@id/imageFurnitureContextRvItem"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="3dp"
            android:fontFamily="@font/poppins_thin"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/tvProductPriceFurnitureContext"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="$49.99"
            app:layout_constraintStart_toStartOf="@id/tvProductNameFurnitureContext"
            app:layout_constraintTop_toBottomOf="@id/tvProductNameFurnitureContext"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/sf_pro_display"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>